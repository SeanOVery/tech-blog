<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{user.name}}</p>
  <p>{{text}}</p>
  <p>Created on {{format_date date_created}}</p>
</div>

<div>
      <form class="form comment-form" data-id="{{id}}">
      <div class="form-group">
        <label for="comment-input">Comment:</label>
        <textarea class="form-input" type="text" id="comment-input" ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}" id="comment-btn">Comment</button>
      </div>
    </form>
</div>

<script src="/js/blogpost.js"></script>